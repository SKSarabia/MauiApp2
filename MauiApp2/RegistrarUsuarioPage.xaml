<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.RegistrarUsuarioPage"
             Shell.NavBarIsVisible="False"
             Title="Registrar Usuario"
             BackgroundColor="#1F2933">
    <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="Center" Padding="20">
        <Label Text="Crea tu cuenta" FontSize="24" FontAttributes="Bold"
               TextColor="White" Margin="0,0,0,20"/>

        <Entry x:Name="UsuarioEntry" Placeholder="Nombre de usuario" WidthRequest="250"
               BackgroundColor="#374151"
               TextColor="White" Margin="0,10,0,10"/>

        <Entry x:Name="CorreoEntry" Placeholder="Correo electrónico" WidthRequest="250"
               BackgroundColor="#374151"
               TextColor="White" Margin="0,10,0,10"/>
        
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" WidthRequest="250"
               BackgroundColor="#374151"
               TextColor="White" Margin="0,10,0,10"/>

        <Button Text="Registrarse" WidthRequest="250"
        BackgroundColor="#3B82F6" TextColor="White" Margin="0,20,0,0"
        Clicked="RegistrarseButton_Clicked"/>

    </FlexLayout>
</ContentPage>