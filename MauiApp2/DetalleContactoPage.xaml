<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.DetalleContactoPage"
             Title="DetalleContactoPage">
    <Grid Padding="10" RowSpacing="13" ColumnDefinitions="Auto,*" 
          RowDefinitions="Auto,Auto,Auto,Auto">
        <Label Text="Nombre:" FontAttributes="Bold" Margin="5,0"/>
        <Label x:Name="NombreLabel" Grid.Row="0" Grid.Column="1" Margin="5,0"/>

        <Label Text="Teléfono:" FontAttributes="Bold" Margin="5,0" Grid.Row="1"/>
        <Label x:Name="TelefonoLabel" Grid.Row="1" Grid.Column="1" Margin="5,0"/>

        <Label Text="Correo:" FontAttributes="Bold" Margin="5,0" Grid.Row="2"/>
        <Label x:Name="CorreoLabel" Grid.Row="2" Grid.Column="1" Margin="5,0"/>

        <Label Text="Dirección:" FontAttributes="Bold" Margin="5,0" Grid.Row="3"/>
        <Label x:Name="DireccionLabel" Grid.Row="3" Grid.Column="1" Margin="5,0"/>
    </Grid>
</ContentPage>